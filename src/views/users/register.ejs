<!DOCTYPE html>
<html lang="en">

<% const nombreEstilo = "style-Register.css" %>
<%- include('../partials/head.ejs' , {nombreHojaEstilos: nombreEstilo}) %>

<body>
    <%- include('../partials/header.ejs') %>

    <main>
        
        <div class = "register-containerRegistro">
            <h3 class = "register-tituloRegistro"> REGISTRO </h3>
            <form class = "register-formRegistro" action = "/users/login" method = "post"  enctype="multipart/form-data"> 

                <div class = "register-primerParteFormulario">

                    <input class = "register-input" type="text" placeholder="USUARIO" name = "usuario" value = "<%= locals.oldData ? oldData.usuario : null %>"> </input>
                    <% if (locals.errors && errors.usuario) {%>
                        <div class = "register-contenedorError">
                            <h3 class = "register-textoError"><%= errors.usuario.msg %></h3>
                        </div>
                    <% } %>
                    <input class = "register-input" type="password" placeholder="CONTRASEÑA" name = "contraseña" value = "<%= locals.oldData ? oldData.contraseña : null %>"> </input>
                    <% if (locals.errors && errors.contraseña) {%>
                        <div class = "register-contenedorError">
                            <h3 class = "register-textoError"><%= errors.contraseña.msg %></h3>
                        </div>
                    <% } %>
                    <input class = "register-input" type="password" placeholder="REPETIR CONTRASEÑA" name = "contraseñaRepetida" value = "<%= locals.oldData ? oldData.contraseñaRepetida : null %>"> </input>
                    <% if (locals.errors && errors.contraseñaRepetida) {%>
                        <div class = "register-contenedorError">
                            <h3 class = "register-textoError"><%= errors.contraseñaRepetida.msg %></h3>
                        </div>
                    <% } %>
                    <input class = "register-input" type="text" placeholder="NOMBRE" name = "nombre" value = "<%= locals.oldData ? oldData.nombre : null %>"> </input>
                    <% if (locals.errors && errors.nombre) {%>
                        <div class = "register-contenedorError">
                            <h3 class = "register-textoError"><%= errors.nombre.msg %></h3>
                        </div>
                    <% } %>
                    <input class = "register-input" type="text" placeholder="APELLIDO" name = "apellido" value = "<%= locals.oldData ? oldData.apellido : null %>"> </input>
                    <% if (locals.errors && errors.apellido) {%>
                        <div class = "register-contenedorError">
                            <h3 class = "register-textoError"><%= errors.apellido.msg %></h3>
                        </div>
                    <% } %>
                    <input class = "register-input" type="email" placeholder="EMAIL" name = "email" value = "<%= locals.oldData ? oldData.email : null %>"> </input>
                    <% if (locals.errors && errors.email) {%>
                        <div class = "register-contenedorError">
                            <h3 class = "register-textoError"><%= errors.email.msg %></h3>
                        </div>
                    <% } %>
                    <input class = "register-input" type="tel" placeholder="TELEFONO" name = "telefono" value = "<%= locals.oldData ? oldData.telefono : null %>"> </input>
                    <% if (locals.errors && errors.telefono) {%>
                        <div class = "register-contenedorError">
                            <h3 class = "register-textoError"><%= errors.telefono.msg %></h3>
                        </div>
                    <% } %>
                    <div class = "register-containerFileInput">
                        <label class = "register-labelCargarImagen" for="imagen"> Imagen usuario </label>
                        <input class = "register-input" id = "imagenUsuario" type="file" name = "imagenUsuario"></input>
                    </div>
                    <input class = "register-input" type="password" placeholder="CONTRASEÑA ADMINISTRADOR" name = "contraseñaAdmin"> </input>
                </div>

                <button type = "submit" class = "register-buttonFinalizar"> 
                    FINALIZAR REGISTRO
                    <i class="register-logoButton fa-solid fa-id-card"></i>
                </button>
                

            </form>
        </div>

        
    </main>
    <%- include('../partials/footer.ejs') %>
    

</body>
</html>