<!DOCTYPE html>
<html lang="en">

<% const nombreEstilo = "style-Login.css" %>
<%- include('../partials/head.ejs' , {nombreHojaEstilos: nombreEstilo}) %>

<body>
    <header>

        <div class = "login-Header-Contenedor">
            <div class = "login-ContenidoHeader">
                <a class = "login-LogoHeader" href="/">
                    <img class = "login-ImagenLogoHeader" src="/images/home/Logo Reselec Sombra Blanca.png">
                </a>
            </div>
        </div>
        
    
    </header>

    <main>
        <div class="login-fondo">
            <div class="login-container">
                <div class = "login-container-bienvenido">
                    <h3 class = "login-bienvenido"><i class="fa-solid fa-users"></i></h3>
                </div>

                <form class="login-form" action="/users/login" method="post">
                    <div class="login-control-formulario">
                        <input type="text" placeholder="Nombre de Usuario" class="login-control" name="usuario" value = "<%= locals.oldData ? oldData.usuario : null %>"> </input>
                    </div>
                    <div class="login-control-formulario">
                        <input type="password" placeholder="Contraseña" class="login-control" name="password"> </input>
                    </div>
                    <div class = "login-contenedorError">
                        <% if (locals.errors && errors.password) {%>
                            <h3 class = "login-textoError"><%= errors.password.msg %></h3>
                        <% } %>
                    </div>
                    
                    <div class = "login-container-recordar">
                        <input type="checkbox" value="Recordame" name="recordameButton">
                        <label class= "login-texto-recordar" for="Recordame">Recordar usuario</label>
                    </div>
                     
                    
                    <a href="#" value="" class="login-olvidado">OLVIDO SU CONTRASEÑA?</a>
                    <button type="submit" class="login-enviar">INGRESAR</button>
                </form>
            </div>
        </div>
    </main>

    <%- include('../partials/footer.ejs') %>
    
    <script src = "/js/validationLogin.js"></script>
</body>
</html>