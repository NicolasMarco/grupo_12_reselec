<!DOCTYPE html>
<html lang="en">

<% const nombreEstilo = "style-ListadoProductos.css" %>
<%- include('../partials/head.ejs' , {nombreHojaEstilos: nombreEstilo}) %>

<body>

    <%- include('../partials/header.ejs') %>

    <main>
        
        <div class = "encabezadoProductos">
            <div class = "lineaEstetica"></div>
            <div class = "ContenedorTitulo">
                <h3 class = "tituloDestacadosA">Listado de</h3>
                <h3 class = "tituloDestacadosB">Productos</h3>
            </div>
        </div>

        <section class = "productosDestacados">
            
            <% productos.forEach((producto) => { %>

            <a class = "enlaceProducto" href="/products/productDetail/<%= producto.id %>">
                <article class = "cuadroProducto">
                    <div class = "contenedorImagenProducto">
                        <img class = "imagenProducto" src="/images/products/<%= producto.mainImage %>" alt="">
                    </div>
                    <div class = "lineaEsteticaProducto"></div>
                    <div class = "datosProducto">
                        <h4 class = "nombreProducto"> <%= producto.name %> </h4>
                        <div class = "descripcionProducto">
                            <p class = textoDescripcion><%= producto.description %></p>
                        </div>
                        <div class = "precioProducto">
                            <p class = "textoPrecio"> $<%= producto.price %> </p>
                        </div>
                    </div>
                </article>
            </a>

            <% }) %>
        
        </section>

        <% if (locals.isAdmin) { %> 

        <div class="prod-container-formEdicion">
            <form class = "prod-form-editar" action="/products/agregarProducto" method="GET">
                <button class = "prod-button-enviar" type = "submit">AGREGAR</button>
            </form>
        </div>

        <% } %> 

    </main>

    <%- include('../partials/footer.ejs') %>
    
</body>


</html>